<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/albumArtwork"
        android:src="@drawable/ic_broken_image_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="54dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/nowPlayingSongTitle"
        android:layout_centerInParent="true"
        android:layout_below="@+id/albumArtwork"
        android:textSize="48sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:text=""/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/nowPlayingSongArtist"
        android:layout_centerInParent="true"
        android:layout_below="@+id/nowPlayingSongTitle"
        android:textSize="32sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:text=""/>


</RelativeLayout>