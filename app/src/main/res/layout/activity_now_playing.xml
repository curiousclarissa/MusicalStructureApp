<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/list_item_height">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_image_size_now_playing_activity"
        android:id="@+id/albumArtwork"
        android:src="@drawable/ic_broken_image_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/nowPlayingSongTitle"
        android:layout_centerInParent="true"
        android:layout_below="@+id/albumArtwork"
        android:textSize="@dimen/song_title_size_now_playing_activity"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:text=""/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/nowPlayingSongArtist"
        android:layout_centerInParent="true"
        android:layout_below="@+id/nowPlayingSongTitle"
        android:textSize="@dimen/song_artist_size_now_playing_activity"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />


</RelativeLayout>